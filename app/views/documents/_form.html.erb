<%= form_for @document do |f| %>

  <div class="form-group">
    <%= f.text_field :title, autofocus: true, placeholder: "Title" %>
  </div>
  <div class="form-group">
    <%= f.text_area :body, cols: 60, rows: 10, placeholder: "Body" %>
  </div>
    <%= f.submit "Create Document", class: "btn btn-success" %>

<% end %>
